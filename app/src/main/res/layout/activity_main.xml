<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/website_edittext"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:hint="@string/defaultText"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/open_website_button"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@android:drawable/alert_light_frame"
        android:onClick="Open_WebSite"
        android:text="webSite Search"
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="visible"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="#ffff" />

    <EditText
        android:id="@+id/location_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/textsdeafoult1" />

    <Button
        android:id="@+id/open_location_button"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:onClick="open_Location"
        android:text="Open_Location"
        android:textColor="#000000"
        app:backgroundTint="#FFFFFF" />

    <EditText
        android:id="@+id/share_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit_txt" />

    <Button
        android:id="@+id/share_text_button"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:onClick="share_Text"
        android:text="shareText"
        android:textColor="#292424"
        android:textSize="16sp"
        app:backgroundTint="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="viewImage"
        tools:srcCompat="@tools:sample/avatars" />

    />

    <Button
        android:id="@+id/imbtn"
        android:layout_width="317dp"
        android:layout_height="108dp"
        android:layout_marginBottom="104dp"
        android:onClick="capture"
        android:text="TakeCapture"
        android:textColor="#95A0A2"
        android:textSize="20sp"
        app:backgroundTint="#303134" />


</LinearLayout>